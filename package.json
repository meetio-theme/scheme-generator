{
    "name": "@meetio/scheme-generator",
    "version": "3.1.0",
    "description": "Easily generate schemes for Sublime Text",
    "main": "dist/index.js",
    "typescript": {
        "definition": "dist/index.d.ts"
    },
    "files": [
        "dist/**/*.js",
        "dist/**/*.d.ts"
    ],
    "types": "dist/index",
    "bugs": {
        "url": "https://github.com/meetio-theme/scheme-generator/issues"
    },
    "author": "Mauro Reis Vieira <mauroreisvieira@gmail.com>",
    "license": "MIT",
    "scripts": {
        "watch": "tsc -w",
        "build": "tsc && ts-node demo/generate.ts",
        "prettier": "prettier --write \"lib/*.ts?(x)\"",
        "lint": "eslint \"lib/*.ts\" \"lib/**/*.ts\"",
        "changelog": "conventional-changelog -p angular -r 2 -i CHANGELOG.md -s",
        "release": "bash scripts/release.sh",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "devDependencies": {
        "@babel/core": "7.15.5",
        "@babel/preset-env": "7.15.6",
        "@commitlint/cli": "^13.2.0",
        "@commitlint/config-conventional": "^13.2.0",
        "@typescript-eslint/eslint-plugin": "4.32.0",
        "@typescript-eslint/parser": "4.32.0",
        "babel-eslint": "^10.0.3",
        "conventional-changelog-cli": "^2.1.1",
        "eslint": "7.32.0",
        "husky": "^7.0.2",
        "prettier": "^2.4.1",
        "ts-node": "^10.2.1",
        "typescript": "^4.4.3",
        "nanocolors": "^0.2.12"
    },
    "dependencies": {
        "@types/node": "^16.10.2"
    }
}
