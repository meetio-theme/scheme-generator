{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "target": "es6",
        "outDir": "dist",
        "lib": ["es7"],
        "strict": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "allowUnreachableCode": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "resolveJsonModule": true
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node"
    },
    "include": ["src/*.ts"],
    "exclude": ["node_modules", "dist"]
}
